{
  "name": "is2-pandebugger",
  "version": "1.0.0",
  "description": "is2 final project - Modular Monolith Backend API",
  "homepage": "https://github.com/SebMatDo/IS2-pandebugger#readme",
  "bugs": {
    "url": "https://github.com/SebMatDo/IS2-pandebugger/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebMatDo/IS2-pandebugger.git"
  },
  "license": "MIT",
  "author": "",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cp .env.local .env && nodemon --watch src --exec ts-node src/server.ts",
    "dev:test": "cp .env.test .env && nodemon --watch src --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:auth": "jest --testPathPattern=auth",
    "db:migrate": "ts-node src/shared/database/migrate.ts migrate",
    "db:seed": "ts-node src/shared/database/migrate.ts seed",
    "db:reset": "ts-node src/shared/database/migrate.ts reset",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v",
    "docker:dev": "docker compose up --build",
    "docker:test": "docker compose -f docker-compose.test.yml up --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build",
    "docker:shell": "docker exec -it pandebugger-postgres psql -U pandebugger_user -d pandebugger_dev",
    "docker:pgadmin": "open http://localhost:5050",
    "test:api": "./test-api.sh",
    "deploy:build": "docker build -t pandebugger-api -f Dockerfile .",
    "deploy:tag": "docker tag pandebugger-api:latest ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/pandebugger-api:latest",
    "deploy:push": "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/pandebugger-api:latest"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
